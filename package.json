{
  "name": "freshsales",
  "version": "0.2.2",
  "description": "A node wrapper for the FreshSales API",
  "repository": {
    "type": "git",
    "url": "git://github.com/MadKudu/node-freshsales.git"
  },
  "keywords": [
    "freshsales"
  ],
  "author": {
    "name": "Paul Cothenet",
    "url": "https://github.com/pcothenet/"
  },
  "license": "MIT",
  "main": "./dist/client.js",
  "types": "./dist/client.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "coverage:clean": "shx rm -rf ./coverage ./.nyc_output",
    "test": "npm run lint && npm run coverage:clean && npm run mocha",
    "mocha": "nyc mocha test/**/*.spec.ts",
    "lint": "tslint --project .",
    "build": "npm run build:clean && tsc",
    "build:clean": "shx rm -rf ./dist"
  },
  "nyc": {
    "extension": [
      ".js",
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "coverage/",
      "dist/",
      "test/",
      "**/*.d.ts"
    ],
    "reporter": [
      "lcov"
    ],
    "all": true
  },
  "dependencies": {
    "axios": "^0.18.0",
    "bottleneck": "2.19.5",
    "debug": "4.1.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/lodash": "^4.14.118",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.5.1",
    "@types/request": "2.47.0",
    "@types/request-promise": "4.1.41",
    "chai": "4.1.2",
    "lodash": "^4.17.5",
    "mocha": "5.0.1",
    "nyc": "^13.1.0",
    "shx": "^0.3.2",
    "ts-node": "^7.0.1",
    "tslint": "5.11.0",
    "tslint-config-airbnb": "5.11.1",
    "typescript": "3.1.6"
  }
}
