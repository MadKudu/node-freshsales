{
  "name": "freshsales",
  "version": "0.2.2",
  "description": "A node wrapper for the FreshSales API",
  "repository": {
    "type": "git",
    "url": "git://github.com/MadKudu/node-freshsales.git"
  },
  "keywords": [
    "freshsales"
  ],
  "author": {
    "name": "Paul Cothenet",
    "url": "https://github.com/pcothenet/"
  },
  "license": "MIT",
  "main": "./dist/client.js",
  "types": "./dist/client.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "coverage:clean": "shx rm -rf ./coverage ./.nyc_output",
    "test": "npm run lint && npm run coverage:clean && npm run mocha",
    "mocha": "nyc mocha test/**/*.spec.ts",
    "lint": "eslint --fix 'lib/**/*.ts' 'test/**/*.spec.ts'",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "build": "npm run build:clean && tsc",
    "build:clean": "shx rm -rf ./dist"
  },
  "nyc": {
    "extension": [
      ".js",
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "coverage/",
      "dist/",
      "test/",
      "**/*.d.ts"
    ],
    "reporter": [
      "lcov"
    ],
    "all": true
  },
  "dependencies": {
    "axios": "^1.2.2",
    "debug": "4.3.4"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/debug": "^4.1.7",
    "@types/lodash": "^4.14.191",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "chai": "4.3.7",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "lodash": "^4.17.21",
    "mocha": "10.2.0",
    "nyc": "^15.1.0",
    "shx": "^0.3.4",
    "ts-node": "^10.9.1",
    "typescript": "4.9.4"
  }
}
